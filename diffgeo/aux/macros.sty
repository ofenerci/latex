
\ProvidesPackage{./aux/macros}[2015/06/27 Linguistics, math, and physics macros]

% linguistics
%
\providecommand*{\lingo}[1]{\textsl{#1}}
%
% linguistic forms
%
\providecommand*{\lingform}[1]{\textit{#1}}
%
\providecommand*{\aka}{\lingform{aka}}
\providecommand*{\eg}{\lingform{e.g.}}
\providecommand*{\etc}{\lingform{etc}}
\providecommand*{\ie}{\lingform{i.e.}}
\providecommand*{\viz}{\lingform{viz.}}
%
% quotation marks
%
\providecommand*{\scare}[1]{\guillemotleft\,{#1}\,\guillemotright}

% geometric objects
%
% spaces
%
\providecommand*{\set}[1]{\mathcal{#1}} % set
%
% special sets
%
\providecommand*{\eset}[1]{\mathbb{#1}}
\providecommand*{\espace}{\eset{E}}         % euclidean space
\providecommand*{\nespace}[1]{\espace^{#1}} % n-dim euclidean space
\providecommand*{\rspace}{\eset{R}}         % real space
\providecommand*{\nrspace}[1]{\rspace^{#1}} % n-dim real space
%
\providecommand*{\xset}[1]{\mleft\lbrace{#1}\rbrace\mright} % expanded set
%
\providecommand*{\fdef}[3]{{#1}:{#2}\to{#3}} % function definition
%
% sequences
%
\providecommand*{\seq}[3]{{#1}\bigl\vert_{#2}^{#3}}
%
% geometry
%
\providecommand*{\region}[1]{\mathcal{\MakeUppercase{#1}}} % geometric region
\providecommand*{\point}[1]{\region{#1}}                   % points
\providecommand*{\manifold}[1]{\region{#1}}                % manifold
%
\providecommand*{\echarge}{e}               % electric charge
\providecommand*{\farad}{f}                 % Faraday's tensor
\providecommand*{\kron}{\delta}             % Kronecker's delta
\providecommand*{\levi}{\varepsilon}        % Levi-Civita tensor
\providecommand*{\mass}{m}                  % mass
\providecommand*{\metric}{g}                % metric (tensor)
\providecommand*{\invmet}{\metric^{-1}}     % inverse metric (tensor)
\providecommand*{\linelem}{ds}              % line element
\providecommand*{\riemann}{r}               % riemann tensor
\providecommand*{\sqlinelem}{\parens{ds}^2} % squared line element
%
\providecommand*{\slot}{\textunderscore} % slot in tensors
%
\providecommand*{\bvec}{\gamma} % basis vector
\providecommand*{\sbvec}{e}     % standard basis vector (rectangular basis)
%
% vector products
%
\providecommand*{\iprod}{\cdot}   % inner product
\providecommand*{\cprod}{\times}  % cross product
\providecommand*{\tprod}{\otimes} % tensor product
%
% mechanics
%
\providecommand*{\acc}{a}               % acceleration
\providecommand*{\event}[1]{\point{#1}} % event
\providecommand*{\length}{l}            % length
\providecommand*{\pos}{x}               % position
\providecommand*{\svec}{\xi}            % separation vector
\providecommand*{\vel}{u}               % velocity
%
% energy transport
%
\providecommand*{\temp}{\theta} % temperature
%
% derivatives
%
\providecommand*{\dt}[1]{\dot{#1}}          % dot time derivative
\providecommand*{\ddt}[1]{\ddot{#1}}        % dot, dot time derivative
\providecommand*{\bder}{D_t}                % Bianchi derivative
\providecommand*{\dbder}[1]{\dot{\bar{#1}}} % dot Bianchi derivative
%
% div, grad, curl
%
\let\div\relax                    % \div already def. as %
\DeclareMathOperator{\div}{div}   % divergence
\DeclareMathOperator{\curl}{curl} % curl
\DeclareMathOperator{\grad}{grad} % gradient
\DeclareMathOperator{\lap}{lap}   % Laplace operator
\DeclareMathOperator{\rot}{rot}   % rotational
%
\DeclareMathOperator{\cont}{cont} % contraction

% index notation
%
\providecommand*{\bidx}[1]{\overline{#1}} % bar index (alternate coordinate system)
\providecommand*{\hidx}[1]{\widehat{#1}}  % hat index (alternate coordinate system)
%
\providecommand*{\tvec}[2]{\tensor{#1}{^{#2}}} % tensor vector (vector in tensor notation)
\providecommand*{\tcov}[2]{\tensor{#1}{_{#2}}} % tensor covector (covector in tensor notation)
%
\providecommand*{\tsbvec}[1]{\tensor{\sbvec}{^{#1}}} % tensor basis vector
\providecommand*{\tsbcov}[1]{\tensor{\sbvec}{_{#1}}} % tensor basis covector
%
\providecommand*{\atvec}[2]{\tvec{#1}{\bidx{#2}}} % alternate coordinate vector
\providecommand*{\atcov}[2]{\tcov{#1}{\bidx{#2}}} % alternate coordinate covector
%
\providecommand*{\ipd}[1]{\partial_{#1}}          % index partial derivative
\providecommand*{\aipd}[1]{\partial_{\bidx{#1}}}  % alternate coordinate index partial derivative
%
\providecommand{\itens}{\tensor} % indexed tensor
%
\providecommand*{\tlevi}[3]{\tensor{\levi}{_{#1}_{#2}_{#3}}} % index levi-civita tensor
\providecommand*{\tkron}[1]{\tensor{\kron}{#1}}              % index covector-covector metric
\providecommand*{\tcovmet}[2]{\tensor{\metric}{_{#1}_{#2}}}  % index covector-covector metric
\providecommand*{\tvecmet}[2]{\tensor{\metric}{^{#1}^{#2}}}  % index vector-vector metric
%
\providecommand*{\atcovmet}[2]{\tensor{\metric}{_{\bidx{#1}}_{\bidx{#2}}}} % alternate coord. index covector-covector metric
\providecommand*{\atvecmet}[2]{\tensor{\metric}{^{\bidx{#1}}^{\bidx{#2}}}} % alternate coord. index covector-covector metric
%
\providecommand*{\tfarad}[2]{\tensor{\farad}{_{#1}_{#2}}}                                             % index faraday tensor
\providecommand*{\triemann}[4]{\tensor{\riemann}{^{#1}_{#2}_{#3}_{#4}}}                               % index riemann tensor
\providecommand*{\atriemann}[4]{\tensor{\riemann}{^{\bidx{#1}}_{\bidx{#2}}_{\bidx{#3}}_{\bidx{#4}}}}  % alternate index riemann tensor
%
\providecommand*{\fkchris}[3]{\tensor{\Gamma}{_{#1}_{#2}_{#3}}} % Christoffel symbols -- first kind
\providecommand*{\skchris}[3]{\tensor{\Gamma}{^{#1}_{#2}_{#3}}} % Christoffel symbols -- second kind
%
% coordinates
%
% coordinate system
%
\providecommand*{\coodsys}[3]{\seq{#1}{#2}{#3}} % coordinate system as sequence
%
% rectangular coordinates
%
\providecommand*{\xpos}{x}
\providecommand*{\ypos}{y}
\providecommand*{\zpos}{z}
%
% cylindrical-polar coordinates
%
\providecommand*{\pxpos}{r}      % polar 'x' position
\providecommand*{\pypos}{\theta} % polar 'y' position
\providecommand*{\pzpos}{z}      % polar 'y' position
%
% spherical coordinates
%
\providecommand*{\sxpos}{\rho}   % spherical 'x' position
\providecommand*{\sypos}{\theta} % spherical 'y' position
\providecommand*{\szpos}{\psi}   % spherical 'z' position

% dim analysis
%
\providecommand*{\phdim}[1]{\si{#1}} % physical dimension

% various
%
\providecommand*{\defas}{\equiv}                                % defined as
\providecommand*{\eqtext}[1]{\text{[\footnotesize\textsf{#1}]}} % text in equation
\providecommand*{\parens}[1]{\mleft({#1}\mright)}               % parenthesis
\providecommand*{\tuple}[1]{\parens{#1}}                        %
\providecommand*{\sbtxt}[1]{_\text{\textsf{#1}}}                % subscript text
\providecommand*{\spexp}[1]{^{\parens{#1}}}                     % superscript exponent
\providecommand*{\vat}[1]{\parens{#1}}                          % value of a function at a point
%
\providecommand*{\iverson}[1]{\mleft\lbrack{#1}\mright\rbrack\sbtxt{iv}}  % iverson brackets
%
\DeclareMathOperator{\norm}{norm} % absolute value, norm, length of a tensor
\DeclareMathOperator{\diag}{diag} % diagonal of a matrix
