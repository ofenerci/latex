
\ProvidesPackage{./sty/artphysics}[2015/07/08 physics macros. rimbaudcode]

% constants
%
\providecommand*{\klight}{c} % speed of light in vacuum

% (coordinate-free) geometric objects
%
\providecommand*{\cov}[1]{\tilde{#1}}     % covector
\providecommand*{\idtens}{i}              % identity tensor
\providecommand*{\event}[1]{\mathcal{#1}} % events (points in spacetime)
\providecommand*{\point}[1]{\mathcal{#1}} % point in a manifold
\providecommand*{\uvec}[1]{\hat{#1}}      % unit vector
\providecommand*{\inv}[1]{\br{#1}^{-1}}   % inverse
\providecommand*{\vol}{\omega}            % volume
\providecommand*{\area}{\sigma}           % area
\providecommand*{\curve}{\Gamma}          % curve
\providecommand*{\ptime}{\tau}            % proper time
%
% regions
%
\providecommand*{\region}[1]{\set{#1}}                 % regions in space
\providecommand*{\cregion}[1]{\region{#1}}             % closed regions in space
\providecommand*{\oregion}[1]{\region{#1}^{{}\circ{}}} % open regions in space
\providecommand*{\bregion}[1]{\partial\region{#1}}     % boundary of regions in space
%
% metric
%
\providecommand*{\fmetric}{\eta}              % flat metric
\providecommand*{\kron}{\delta}               % Kronecker's delta
\providecommand*{\metric}{g}                  % metric tensor
\providecommand*{\invmet}{\inverse{\metric}}  % inverse metric tensor
\providecommand*{\minkmet}{\eta}              % minkowski metric tensor
%
% curvature
%
\providecommand*{\riemann}{r}      % riemann tensor
\providecommand*{\ricci}{r}        % ricci tensor
\providecommand*{\sricci}{r}       % ricci scalar
\providecommand*{\einstein}{e}     % einstein tensor
%
\providecommand*{\pos}{x}    % event position
\providecommand*{\sep}{\xi}  % event separation
%
\providecommand*{\distance}{s}                            % distance between events
\providecommand*{\difdist}{d\distance}                    % differential distance
\providecommand*{\sqdifdist}{\parens{\difdist}^2}         % squared differential distance
\providecommand*{\norm}[1]{\mleft\lvert{#1}\mright\rvert} % norm, length
%
% basis
%
\providecommand*{\belem}{e}                  % basis element
\providecommand*{\bcov}{\cov{\belem}}        % basis covector
\providecommand*{\bvec}{\vec{\belem}}        % basis vector
\providecommand*{\bset}[3]{\seq{#1}{#2}{#3}} % basis set
\providecommand*{\chris}{\Gamma}             % Chirstoffel symbol

% tensor products
%
\providecommand*{\iprod}{\cdot}                                   % inner product
\providecommand*{\oprod}{\wedge}                                  % outer product
\providecommand*{\tprod}{\otimes}                                 % tensor product
\providecommand*{\sprod}[2]{\mleft\langle{#1},{#2}\mright\rangle} % scalar product

% tensor slots
%
\providecommand*{\cslot}{{\scriptstyle\sim}}        % covector slot
\providecommand*{\eslot}{{\scriptstyle\cdot}}       % empty slot
\providecommand*{\fslot}{{\scriptstyle\checkmark}}  % filled slot
\providecommand*{\vslot}{{\scriptstyle\rightarrow}} % vector slot

% tensor order
%
\providecommand*{\torder}[2]{\parens{{#1},{#2}}} % order, rank, type of a tensor

% operators
%
\DeclareMathOperator{\cont}{cont} % tensor contraction

% index-notation
%
\providecommand*{\tcov}[2]{\tensor{#1}{_{#2}}}                 % covector components
\providecommand*{\tvec}[2]{\tensor{#1}{^{#2}}}                 % vector components
\providecommand*{\tvecfmet}[2]{\tensor{\fmetric}{^{#1}^{#2}}}  % flat metric components
%
\providecommand*{\tmetric}[2]{\tensor{\metric}{_{#1}_{#2}}}   % metric components
\providecommand*{\tinvmet}[2]{\tensor{\metric}{^{#1}^{#2}}}   % inverse metric components
\providecommand*{\tidtens}[2]{\tensor{\idtens}{^{#1}_{#2}}}   % identity tensor components
\providecommand*{\tkron}[2]{\tensor{\kron}{^{#1}_{#2}}}       % Kronecker's delta components
\providecommand*{\tminkmet}[2]{\tensor{\minkmet}{_{#1}_{#2}}} % minkowski metric tensor components
%
\providecommand*{\tbcov}[1]{\tensor{\bcov}{^{#1}}} % basis covectors
\providecommand*{\tbvec}[1]{\tensor{\bvec}{_{#1}}} % basis vectors
%
\providecommand*{\tvolel}[1]{d^{#1}\pos} % volume element
%
% tensor calculus
%
\providecommand*{\ipd}[1]{\partial_{#1}} % index partial derivative
%
\providecommand*{\gradient}{\nabla}      % gradient
\providecommand*{\gradcov}{\cov{\nabla}} % gradient covector
\providecommand*{\gradvec}{\vec{\nabla}} % gradient vector
%
\providecommand*{\cgradcov}[1]{\tensor{\gradcov}{_{#1}}} % gradient covector along a curve
\providecommand*{\tgradcov}[1]{\tensor{\gradcov}{_{#1}}} % gradient covector
%
\providecommand*{\tchris}[3]{\tensor{\chris}{^{#1}_{#2}_{#3}}}          % chirstoffel symbol
\providecommand*{\triemann}[4]{\tensor{\riemann}{^{#1}_{#2}_{#3}_{#4}}} % riemann tensor
\providecommand*{\tricci}[2]{\tensor{\ricci}{_{#1}_{#2}}}               % ricci tensor
\providecommand*{\teinstein}[2]{\tensor{\einstein}{^{#1}^{#2}}}         % einstein tensor
%
% coordinate systems
%
\providecommand*{\coordsys}[3]{\seq{#1}{#2}{#3}} % coordinate system
%
% rectangular
%
\providecommand*{\xpos}{x} % x position in rectangular coord.
\providecommand*{\ypos}{y} % y position in rectangular coord.
\providecommand*{\zpos}{z} % z position in rectangular coord.
%
% cylindrical polar
%
\providecommand*{\cxpos}{r}       % x position in cylindrical polar coord.
\providecommand*{\cypos}{\theta}  % y position in cylindrical polar coord.
\providecommand*{\czpos}{z}       % z position in cylindrical polar coord.
%
% spherical polar
%
\providecommand*{\sxpos}{\rho}    % x position in spherical polar coord.
\providecommand*{\sypos}{\theta}  % y position in spherical polar coord.
\providecommand*{\szpos}{\phi}    % z position in spherical polar coord.
%
% matrices
%
\providecommand*{\asmatrix}[1]{\mleft\lbrack{#1}\mright\rbrack}   % matrix representation
\providecommand*{\transmat}{\Lambda}                              % transformation matrix
\providecommand*{\ttransmat}[2]{\tensor{\transmat}{^{#1}_{#2}}}   % transformation matrix components
\providecommand*{\aidx}[1]{{#1}\sp{\prime}}                       % alternate index
\providecommand*{\ridx}[1]{\hat{#1}}                              % rectangular index
\providecommand*{\trans}[1]{\br{#1}^{T}}                          % transpose (as superscript)
%
\providecommand*{\xttransmat}[2]{\dfrac{\partial\br{#1}}{\partial\br{#2}}} % expanded trans. matrix

% misner notation for special tensors
%
\providecommand*{\misnerstyle}[1]{\textit{\textsf{#1}}} % general style
\providecommand*{\mmetric}{\misnerstyle{g}}             % misner metric
\providecommand*{\minvmet}{\misnerstyle{g}^{-1}}        % misner metric
\providecommand*{\mriemann}{\misnerstyle{Riemann}}      % misner riemann
\providecommand*{\mricci}{\misnerstyle{Ricci}}          % misner ricci
\providecommand*{\meinstein}{\misnerstyle{Einstein}}    % misner einstein

% operators
%
\DeclareMathOperator{\grad}{grad} % gradient
\let\div\division
\DeclareMathOperator{\div}{div} % gradient

% mechanics
%
\providecommand*{\lmom}{p} % linear momentum
\providecommand*{\mass}{m} % mass
\providecommand*{\vel}{v}  % velocity
