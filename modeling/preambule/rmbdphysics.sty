%%% Mechanics
\newcommand{\pos}{\xi}      % position
\newcommand{\vel}{\dt\pos}  % velocity
\newcommand{\acc}{\ddt\pos} % acceleration
\newcommand{\mass}{m}       % mass
\newcommand{\kspring}{k}    % spring constant
\newcommand{\mom}{p}        % momentum
\newcommand{\force}{f}      % force
\newcommand{\grav}{g}       % free fall acceleration
\newcommand{\dens}{\rho}    % density
\newcommand{\dynvis}{\mu}   % dynamic viscosity

%%% Indexed mechanics
\newcommand{\fpos}[1]{\fvec{\pos}{#1}} % indexed position (contravariant)
\newcommand{\fvel}[1]{\fvec{\vel}{#1}} % indexed velocity (contravariant)

%%% Lagrange and Hamilton mechanics
\newcommand{\ener}{e}             % energy
\newcommand{\ken}{\ener\txt{kin}} % kinetic energy
\newcommand{\pen}{\ener\txt{pot}} % potential energy
\newcommand{\lag}{\ener\txt{lag}} % lagrangian
\newcommand{\ham}{\ener\txt{ham}} % hamiltonian
%
\newcommand{\eleq}[2]{\ipd{#1}\lag - \iod t\ipd{#2}\lag}             % euler-lagrange equation
\newcommand{\alteleq}[2]{\left(\ipd{#1} - \iod t\ipd{#2}\right)\lag} % alternative euler-lagrange equation
%
\newcommand{\elop}[2]{\square_{{#1}{#2}}} % Euler-Lagrange operator
%
\newcommand{\igpos}[1]{\fvec{\pos}{#1}}      % indexed gen. position
\newcommand{\igvel}[1]{\fvec{\vel}{#1}}      % indexed gen. velocity
\newcommand{\igacc}[1]{\fvec{\acc}{#1}}      % indexed gen. acceleration
\newcommand{\igmom}[1]{\rvec{\mom}{#1}}      % indexed gen. momentum
\newcommand{\dtigmom}[1]{\rvec{\dt\mom}{#1}} % time derivative of gen. mom.
\newcommand{\igforce}[1]{\rvec{\force}{#1}}  % indexed gen. force

