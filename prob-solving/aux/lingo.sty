%%% Logic
%
% NDL: Natural deduction Lemmon (style)
%
\newcounter{ndlproofcounter}
%
% Use the next two commands inside a (3-col) table environment
% \ndlst: natural deduction line statement
% \ndleq: natural deduction line equation
%
% \ndlst{Assumptions}{Statement}{Justification}
%
\providecommand*{\ndlst}[3]{
  [{#1}] &
  \stepcounter{ndlproofcounter}
  (\arabic{ndlproofcounter})
  \quad{#2} &
  {#3} \\
}
%
% \ndleq{Assumptions}{Equation}{Justification}
%
\providecommand*{\ndleq}[3]{
  [{#1}] &
  \stepcounter{ndlproofcounter}
  (\arabic{ndlproofcounter})
  \ensuremath{\quad{#2}} &
  {#3} \\
}
